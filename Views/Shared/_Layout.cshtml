<html>

<head>

    <meta name="viewport" content="width=device-width">
    <title>SidebarMenu</title>
    <link href="/aspnetmvc/Content/Site.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
    <style rel="stylesheet" id="themelink"></style>
    <link href="https://cdn.syncfusion.com/ej2/material.css" rel="stylesheet">
    <script type="text/javascript">
        if (/MSIE \d|Trident.*rv:/.test(navigator.userAgent)) {
            document.write('<script src="https://cdnjs.cloudflare.com/ajax/libs/bluebird/3.3.5/bluebird.min.js"><\/script>');
        }
    </script>
    <script id="sample-datasource" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-signals/1.0.0/js-signals.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/elasticlunr/0.9.6/elasticlunr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crossroads/0.12.0/crossroads.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/hasher/1.2.0/hasher.min.js"></script>
    <script src="/aspnetmvc/scripts/samplelist.js"></script>
    <script src="/aspnetmvc/scripts/search-index.js"></script>
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
    <script src="https://d3js.org/d3.v5.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body class="e-lib e-touch">
    <!-- sample level element  -->
    <div id="wrapper">
        <div class="col-lg-12 col-sm-12 col-md-12">
            <div class="header-section dock-menu" id="header">
                <ul class="header-list">
                    <li id="hamburger" class="icon-menu icon list" (click)="toggle()"></li>
                    <li class="right-header list">
                        <div class="horizontal-menu">
                            <!-- menu element declaration-->
                            @if (User.Identity.IsAuthenticated == true)
                            {
                            <div class="e-menu-wrapper dock-menu e-lib e-keyboard"><ul id="horizontal-menubar-out" class="e-control e-menu e-lib e-menu-parent account" role="menubar" tabindex="0"></ul></div>
                            }
                            else
                            {
                            <div class="e-menu-wrapper dock-menu e-lib e-keyboard"><ul id="horizontal-menubar" class="e-control e-menu e-lib e-menu-parent account" role="menubar" tabindex="0"></ul></div>
                            }
                        </div>

                    </li>
                </ul>
            </div>
            <!-- sidebar element declaration-->
            <!-- end of sidebar element -->
            <!-- main content declaration -->
            <div class="main-content e-sidebar-context" id="maintext">
                <div id="sidebar-menu" class="e-control e-sidebar e-lib e-sidebar-absolute e-right e-dock e-transition e-touch e-open e-push" style="width: 220px; z-index: 1000">
                    <div class="dock-menu">
                        <!-- normal state element declaration -->
                        <div class="main-menu">

                            <p class="main-menu-header">CATEGORIES</p>
                            <div>
                                <!-- menu element declaration-->
                                <div class="e-menu-wrapper dock-menu e-lib e-keyboard"><ul onclick="pop()" id="main-menubar" class="e-control e-menu e-lib e-vertical e-menu-parent" role="menubar" tabindex="0" aria-orientation="vertical"> class="e-icons e-caret" ></ul></div>

                            </div>

                        </div>

                        <div class="action">

                            <p class="main-menu-header">ACTIONS</p>
                            <div>
                                <!-- menu element declaration-->
                                <div class="e-menu-wrapper dock-menu e-lib e-keyboard"><ul id="action-menubar" class="e-control e-menu e-lib e-vertical e-menu-parent" role="menubar" tabindex="0" aria-orientation="vertical"> class="e-icons e-caret"></ul></div>

                            </div>
                            @*<button class="e-btn action-btn" id="action-button">Checkout</button>*@
                        </div>
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="admin">



                                <p class="main-menu-header">ADMIN</p>
                                <div>
                                    <!-- menu element declaration-->
                                    <div class="e-menu-wrapper dock-menu e-lib e-keyboard"><ul id="admin-menubar" class="e-control e-menu e-lib e-vertical e-menu-parent" role="menubar" tabindex="0" aria-orientation="vertical"> class="e-icons e-caret"></ul></div>

                                </div>
                            </div>
                        }
                            <!-- end of normal state element declaration -->
                        </div>
                </div><div class="content e-content-animation" style="transform: translateX(0px); margin-left: 220px;">

                    <img class="esh-catalog-title" src="~/images/third.webp" style="height: 260px; width: 100% " />

                    <div class="container" style="width: auto;">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </div>
            </div>
            <!--end of main content declaration -->
        </div>
    </div>




    <script>
        document.addEventListener('DOMContentLoaded', function () {
            sidebarInstance = document.getElementById("sidebar-menu").ej2_instances[0];
            // Expand the Sidebar
            document.getElementById('hamburger').addEventListener('click', function () {
                sidebarInstance.toggle();
            });

        });
    </script>
    <style>

        ::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
            color: white;
            opacity: 1; /* Firefox */
        }

        /* header-section styles */
        #header.header-section,
        #header .search-icon {
            height: 50px;
        }

        #header #hamburger.icon-menu {
            font-size: 24px;
            float: left;
            line-height: 50px;
        }

        #header .right-header {
            height: 50px;
            padding: 7px;
            float: right;
        }

        #header .list {
            list-style: none;
            cursor: pointer;
            font-size: 16px;
            line-height: 35px;
        }

        #header .header-list {
            padding-left: 15px;
            margin: 0;
        }


        /* text input styles */
        #header .search-icon {
            float: left;
            padding-left: 15px;
            border: 0px solid #0a7ee1 !important;
            background-color: #0a7ee1;
            cursor: text;
            width: 5em;
            color: white !important;
        }

        #header .account {
            background-color: #0a7ee1 !important;
        }

        #header .search-icon:focus {
            outline: none;
            cursor: default;
        }

        /* end of text input styles */
        /* end of header-section styles */

        /* content area styles */
        #maintext.main-content {
            height: 100vh;
            z-index: 1000;
        }

        #maintext .content {
            text-align: center;
            font-size: 32px;
            color: #1784c7;
        }

        /* end of content area styles */

        /* menu styles */
        /* horizontal-menu styles */
        #header .header-list .horizontal-menu .e-menu-item {
            height: 35px;
            vertical-align: middle;
            font-size: 16px;
            line-height: 35px;
            background: #06e1bc !important;
        }

        #header .e-menu-item .e-caret {
            line-height: 35px;
        }

        /* end of horizontal-menu styles */
        /* vertical-menu styles */

        #sidebar-menu .e-menu-wrapper ul .e-menu-item.e-menu-caret-icon {
            width: 220px;
        }

        #sidebar-menu .e-menu-wrapper ul .e-menu-item:hover, .e-menu-item.e-focused:hover {
            background-color: #3e454c !important;
        }

        /* end of vertical-menu styles */
        /* end of menu styles */

        /* Sidebar styles */
        /* docksidebar styles */
        .dock-menu .e-menu-wrapper ul .e-menu-item .e-caret,
        #header .search-icon,
        #sidebar-menu .action-btn,
        #header .e-menu-item .e-caret,
        .dock-menu .e-menu-wrapper ul .e-menu-item {
            color: #fff !important;
        }

        .dock-menu.e-close .e-menu-wrapper ul .e-menu-item {
            width: 50px;
        }

        .dock-menu.e-close ul .e-menu-item.e-menu-caret-icon {
            padding-right: 12px;
        }

        #sidebar-menu.e-dock.e-close .e-menu-wrapper ul .e-menu-item .e-caret,
        #sidebar-menu.e-dock.e-close .main-menu-header,
        #sidebar-menu.e-dock.e-close .action-btn {
            display: none;
        }

        #sidebar-menu.e-dock.e-close .e-menu-wrapper ul .e-menu-item.e-menu-caret-icon,
        #sidebar-menu.e-dock.e-close .e-menu-wrapper ul.e-vertical {
            min-width: 0;
            width: 50px !important;
        }

        #sidebar-menu.e-dock.e-close .e-menu-wrapper ul.e-menu {
            font-size: 0;
        }

        #sidebar-menu.e-dock.e-close .e-menu-item .e-menu-icon {
            font-size: 20px;
            padding: 0;
        }

        #sidebar-menu,
        #sidebar-menu ul,
        .dock-menu .e-menu-wrapper,
        .dock-menu.e-menu-wrapper,
        .dock-menu.e-menu-wrapper ul > *,
        .dock-menu .e-menu-wrapper ul > * {
            color: #fff !important;
            background-color: transparent;
            overflow: hidden;
        }

        .e-menu-wrapper ul .e-menu-item .e-menu-url, .e-menu-container ul .e-menu-item .e-menu-url {
            color: #fff !important;
        }

        #sidebar-menu,
        #sidebar-menu ul,
        .dock-menu .e-menu-wrapper,
        .dock-menu.e-menu-wrapper,
        .dock-menu.e-menu-wrapper ul > *,
        .dock-menu .e-menu-wrapper ul > * {
            background-image: linear-gradient(90deg, #087ee1 10%, #087ee1 90%) !important;
            color: #fff !important;
            overflow: hidden;
        }


        #header ul {
            background-image: linear-gradient(315deg, #05e8ba 0%, #087ee1 74%) !important;
            color: #fff !important;
            overflow: hidden;
        }


        /* end of docksidebar styles */
        /*end of  Sidebar styles */
        /*main-menu-header  styles */
        #sidebar-menu .main-menu-header {
            padding: 4px 0px 0px 18px;
            color: white;
        }

        /*end of main-menu-header  styles */

        /*button styles */
        #sidebar-menu .action-btn {
            margin-left: 16px;
            width: 165px;
            height: 30px;
            font-size: 13px;
            border-radius: 5px;
        }

        #sidebar-menu .action-btn {
            background-color: #1784c7;
        }
        /* custom code start */
        /*end of button styles */
        .sb-content-tab #wrapper {
            display: none;
        }

        .center {
            text-align: center;
            display: none;
            font-size: 13px;
            font-weight: 400;
            margin-top: 20px;
        }

        .sb-content-tab .center {
            display: block;
        }

        #sidebar-menu {
            margin-left: -1px;
        }

        .col-md-12, body {
            padding: 0;
        }
        /*body styles */
        body {
            margin: 0;
            overflow-y: hidden;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            -webkit-tap-highlight-color: transparent;
        }
        /*end of body styles */

        /*icon styles */

      

        #header .icon-menu:before {
            content: '\f35a';
            font-family: "Font Awesome 5 Free";
        }

        #sidebar-menu .icon,
        #header #hamburger.icon-menu {
            font-family: 'fontello';
        }

        #sidebar-menu .e-menu-icon::before {
            color: white;
        }

        /*icon styles */
    </style>


    <script type="text/javascript">

        function pop(data) {
            window.location.replace("http://" + window.location.host + "/Home/NavToProducts");

        }

        new ejs.navigations.Menu({
            "cssClass": "dock-menu",
            "hoverDelay": 0.0,
            "items": [
                {
                    "text": "Account",
                    "items": [
                        {
                            "text": "Register",
                            "url": "/account/Register",
                        },
                        {
                            "text": "Login",
                            "url": "/account/Login",
                        }
                    ] 
                },
                {
                    "text": "Home",
                    "url": "/",
                    "items": [
                    ]
                }
            ]
        }).appendTo("#horizontal-menubar");
                new ejs.navigations.Menu({
            "cssClass": "dock-menu",
            "hoverDelay": 0.0,
            "items": [
                {
                    "text": "Account",
                    "items": [{
                        "text": "Logout",
                        "url": "/account/Logout",
                    }]
                },
                {
                    "text": "Home",
                    "url": "/",
                    "items": [
                    ]
                }
            ]
        }).appendTo("#horizontal-menubar-out");
        $.ajax({
            url: "/Home/getCatagoryList",
        }).done(function (data) {


            new ejs.navigations.Menu({
                "cssClass": "dock-menu",
                "hoverDelay": 0.0,
                "items": data,
                "orientation": "Vertical"
            }).appendTo("#main-menubar");

        });
        new ejs.navigations.Menu({
            "cssClass": "dock-menu",
            "hoverDelay": 0.0,
            "items": [
                {                    "text": "Shops",                    "iconCss": "icon-sweets icon",                    "url": "/shops",                    "items": []                },
                {
                    "text": "Cart",                    "iconCss": "icon-sweets icon",                    "url": "/AddToCart/myOrder",                    "items": []
                },
                {
                    "text": "Order History",                    "iconCss": "icon-sweets icon",                    "url": "/AddToCart/orderHistory",                    "items": []
                }
            ],
            "orientation": "Vertical"
        }).appendTo("#action-menubar");


                new ejs.navigations.Menu({
            "cssClass": "dock-menu",
            "hoverDelay": 0.0,
            "items": [
                                    {
                    "text": "Add Item",
                    "iconCss": "icon-sweets icon",
                    "url": "/Products/Create",
                    "items": []
                },
                {
                    "text": "Edit Item",
                    "iconCss": "icon-sweets icon",
                    "url": "/Products/Edit/1",
                    "items": []
                },
                {                    "text": "Stocks",                    "iconCss": "icon-sweets icon",                    "url": "/stocks",                    "items":[]                }



            ],
            "orientation": "Vertical"
                            }).appendTo("#admin-menubar");

            new ejs.navigations.Sidebar({
            "dockSize": "50px",
            "enableDock": true,
            "target": ".main-content",
            "width": "220px",
            "zIndex": 1000.0
        }).appendTo("#sidebar-menu");
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>