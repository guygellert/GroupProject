@model IEnumerable<Shops>

@{
    ViewData["Title"] = "Index";
}

<form asp-action="Search" class="">
    <div class="card text-center">
        <div class="card-header">Search</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-3">
                            <label name="name" class="control-label labelStyle">:Address</label>
                        </div>
                        <div class="col-md-9">
                            <input name="queryAddress" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-3">
                            <label name="name" class="control-label labelStyle">:Store Name</label>
                        </div>
                        <div class="col-md-9">
                            <input name="queryName" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-6">
                            <input checked="checked" value="true" type="checkbox" name="isOpen" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label name="name" class="control-label labelStyle">See Only Open</label>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-footer">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
@if (this.User.IsInRole("Admin"))
{
    <p>

        <a asp-action="Create">Create New</a>
       
    </p>
}
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OpeningTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClosingTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpeningTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClosingTime)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                        @if (User.IsInRole("Admin"))
                        {


                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                            <a asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <style>
        .labelStyle {
            font-size: medium;
            direction: rtl;
        }
    </style>
